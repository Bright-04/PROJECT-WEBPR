<!-- Article Card - Extra Small -->
<div class="article-card-xs">
	<% if (typeof show_cat !== 'undefined' && show_cat) { %>
	<div class="article-category">
		<a href="/category/<%= article.category_id %>" class="category-badge">
			<i class="bi bi-tag me-1"></i>
			<%= article.category_name %>
		</a>
	</div>
	<% } %>

	<div class="article-title">
		<a href="/article/<%= article.article_id %>" class="title-link">
			<p class="title-text"><%= article.title %></p>
		</a>
	</div>

	<div class="article-meta">
		<div class="meta-info">
			<span class="meta-item">
				<i class="bi bi-calendar3 me-1"></i>
				<%= new Date(article.published_date).toLocaleDateString('vi-VN') %>
			</span>
			<span class="meta-item">
				<i class="bi bi-eye me-1"></i>
				<%= article.views || 0 %> lượt xem
			</span>
		</div>
	</div>

	<% if (typeof show_tags !== 'undefined' && show_tags && article.tags) { %>
	<div class="article-tags">
		<% article.tags.slice(0, 2).forEach(tag => { %>
		<a href="/homepage/tag?id=<%= tag.tag_id %>" class="tag-badge"> #<%= tag.tag_name %> </a>
		<% }); %>
	</div>
	<% } %>
</div>

<style>
	.article-card-xs {
		background-color: var(--white);
		border-radius: var(--radius-lg);
		padding: var(--space-3);
		box-shadow: var(--shadow-sm);
		transition: all var(--transition-normal);
		border: 1px solid var(--gray-200);
		margin-bottom: var(--space-3);
	}

	.article-card-xs:hover {
		box-shadow: var(--shadow-md);
		transform: translateY(-2px);
		border-color: var(--primary-color);
	}

	.article-category {
		margin-bottom: var(--space-2);
	}

	.article-title {
		margin-bottom: var(--space-2);
	}

	.title-link {
		text-decoration: none;
		color: inherit;
		transition: color var(--transition-fast);
	}

	.title-link:hover {
		color: var(--primary-color);
	}

	.title-text {
		font-size: var(--text-sm);
		font-weight: var(--font-semibold);
		line-height: var(--leading-tight);
		color: var(--gray-900);
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.article-meta {
		margin-bottom: var(--space-2);
	}

	.meta-info {
		display: flex;
		gap: var(--space-2);
		flex-wrap: wrap;
	}

	.meta-item {
		color: var(--gray-500);
		font-size: var(--text-xs);
		display: flex;
		align-items: center;
	}

	.article-tags {
		display: flex;
		flex-wrap: wrap;
		gap: var(--space-1);
	}

	/* Responsive Design */
	@media (max-width: 480px) {
		.article-card-xs {
			padding: var(--space-2);
		}

		.title-text {
			font-size: var(--text-xs);
		}

		.meta-item {
			font-size: var(--text-xs);
		}
	}
</style>
