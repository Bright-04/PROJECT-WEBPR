<!-- Article Card - Small Right Image -->
<div class="article-card-sr">
	<div class="article-content">
		<div class="article-main">
			<% if (typeof show_cat !== 'undefined' && show_cat) { %>
			<div class="article-category">
				<a href="/category/<%= article.category_id %>" class="category-badge">
					<i class="bi bi-tag me-1"></i>
					<%= article.category_name %>
				</a>
			</div>
			<% } %>

			<div class="article-title">
				<a href="/article/<%= article.article_id %>" class="title-link">
					<h5 class="title-text"><%= article.title %></h5>
				</a>
			</div>

			<div class="article-abstract">
				<p class="abstract-text"><%= article.abstract %></p>
			</div>

			<div class="article-meta">
				<div class="meta-info">
					<span class="meta-item">
						<i class="bi bi-calendar3 me-1"></i>
						<%= new Date(article.published_date).toLocaleDateString('vi-VN') %>
					</span>
					<span class="meta-item">
						<i class="bi bi-eye me-1"></i>
						<%= article.views || 0 %> lượt xem
					</span>
				</div>
			</div>

			<% if (typeof show_tags !== 'undefined' && show_tags && article.tags) { %>
			<div class="article-tags">
				<% article.tags.forEach(tag => { %>
				<a href="/homepage/tag?id=<%= tag.tag_id %>" class="tag-badge"> #<%= tag.tag_name %> </a>
				<% }); %>
			</div>
			<% } %>
		</div>

		<div class="article-image">
			<a href="/article/<%= article.article_id %>" class="image-link">
				<img src="/img/<%= article.thumbnail %>" alt="<%= article.title %>" class="article-thumbnail" />
				<div class="image-overlay">
					<i class="bi bi-arrow-right"></i>
				</div>
			</a>
		</div>
	</div>
</div>

<style>
	.article-card-sr {
	background-color: var(--white);
	border-radius: var(--radius-lg);
	padding: var(--space-6);
	box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
	transition: all var(--transition-normal);
	border: 1px solid var(--gray-200);
	margin-bottom: var(--space-4);
	position: relative;
}

.article-card-sr:hover {
	box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
	transform: translateY(-2px);
	border-color: var(--primary-color);
}

.article-card-sr::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	height: 3px;
	background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
	opacity: 0;
	transition: opacity var(--transition-fast);
}

.article-card-sr:hover::before {
	opacity: 1;
}

	.article-content {
		display: flex;
		gap: var(--space-6);
		align-items: flex-start;
	}

	.article-main {
		flex: 1;
		min-width: 0;
	}

	.article-category {
		margin-bottom: var(--space-3);
	}

	.article-title {
		margin-bottom: var(--space-3);
	}

	.title-link {
		text-decoration: none;
		color: inherit;
		transition: color var(--transition-fast);
	}

	.title-link:hover {
		color: var(--primary-color);
	}

	.title-text {
	font-size: var(--text-lg);
	font-weight: var(--font-semibold);
	line-height: var(--leading-tight);
	color: var(--headline);
	margin: 0;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	overflow: hidden;
	text-overflow: ellipsis;
	font-family: var(--font-family-headline);
	letter-spacing: -0.01em;
}

	.article-abstract {
		margin-bottom: var(--space-4);
	}

	.abstract-text {
	color: var(--body-text);
	font-size: var(--text-sm);
	line-height: var(--leading-relaxed);
	margin: 0;
	display: -webkit-box;
	-webkit-line-clamp: 3;
	-webkit-box-orient: vertical;
	overflow: hidden;
	text-overflow: ellipsis;
	letter-spacing: 0.01em;
}

	.article-meta {
		margin-bottom: var(--space-3);
	}

	.meta-info {
		display: flex;
		gap: var(--space-4);
		flex-wrap: wrap;
	}

	.meta-item {
	color: var(--byline);
	font-size: var(--text-xs);
	display: flex;
	align-items: center;
	font-style: italic;
}

	.article-tags {
		display: flex;
		flex-wrap: wrap;
		gap: var(--space-2);
	}

	.article-image {
		flex-shrink: 0;
		width: 200px;
		height: 150px;
		position: relative;
		border-radius: var(--radius-lg);
		overflow: hidden;
	}

	.image-link {
		display: block;
		width: 100%;
		height: 100%;
		position: relative;
		text-decoration: none;
	}

	.article-thumbnail {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform var(--transition-normal);
	}

	.image-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(45deg, rgba(37, 99, 235, 0.8), rgba(245, 158, 11, 0.8));
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transition: opacity var(--transition-normal);
	}

	.image-overlay i {
		color: var(--white);
		font-size: var(--text-xl);
		transform: translateX(-10px);
		transition: transform var(--transition-normal);
	}

	.article-card-sr:hover .article-thumbnail {
		transform: scale(1.05);
	}

	.article-card-sr:hover .image-overlay {
		opacity: 1;
	}

	.article-card-sr:hover .image-overlay i {
		transform: translateX(0);
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.article-content {
			flex-direction: column;
			gap: var(--space-4);
		}

		.article-image {
			width: 100%;
			height: 200px;
			order: -1;
		}

		.title-text {
			font-size: var(--text-base);
		}

		.abstract-text {
			-webkit-line-clamp: 2;
		}

		.meta-info {
			gap: var(--space-3);
		}
	}

	@media (max-width: 480px) {
		.article-card-sr {
			padding: var(--space-4);
		}

		.article-image {
			height: 150px;
		}

		.title-text {
			font-size: var(--text-sm);
		}

		.abstract-text {
			font-size: var(--text-xs);
		}

		.meta-item {
			font-size: var(--text-xs);
		}
	}
</style>
