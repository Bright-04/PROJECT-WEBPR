<!-- Article Card - Small Left Image -->
<div class="article-card-sl">
	<div class="article-content">
		<div class="article-image">
			<a href="/article/<%= article.article_id %>" class="image-link">
				<img src="/img/<%= article.thumbnail %>" alt="<%= article.title %>" class="article-thumbnail" />
				<div class="image-overlay">
					<i class="bi bi-arrow-right"></i>
				</div>
			</a>
		</div>

		<div class="article-main">
			<% if (typeof show_cat !== 'undefined' && show_cat) { %>
			<div class="article-category">
				<a href="/category/<%= article.category_id %>" class="category-badge">
					<i class="bi bi-tag me-1"></i>
					<%= article.category_name %>
				</a>
			</div>
			<% } %>

			<div class="article-title">
				<a href="/article/<%= article.article_id %>" class="title-link">
					<h6 class="title-text"><%= article.title %></h6>
				</a>
			</div>

			<div class="article-abstract">
				<p class="abstract-text"><%= article.abstract %></p>
			</div>

			<div class="article-meta">
				<div class="meta-info">
					<span class="meta-item">
						<i class="bi bi-calendar3 me-1"></i>
						<%= new Date(article.published_date).toLocaleDateString('vi-VN') %>
					</span>
					<span class="meta-item">
						<i class="bi bi-eye me-1"></i>
						<%= article.views || 0 %> lượt xem
					</span>
				</div>
			</div>

			<% if (typeof show_tags !== 'undefined' && show_tags && article.tags) { %>
			<div class="article-tags">
				<% article.tags.slice(0, 2).forEach(tag => { %>
				<a href="/homepage/tag?id=<%= tag.tag_id %>" class="tag-badge"> #<%= tag.tag_name %> </a>
				<% }); %>
			</div>
			<% } %>
		</div>
	</div>
</div>

<style>
	.article-card-sl {
		background-color: var(--white);
		border-radius: var(--radius-lg);
		padding: var(--space-4);
		box-shadow: var(--shadow-sm);
		transition: all var(--transition-normal);
		border: 1px solid var(--gray-200);
		margin-bottom: var(--space-4);
	}

	.article-card-sl:hover {
		box-shadow: var(--shadow-md);
		transform: translateY(-2px);
		border-color: var(--primary-color);
	}

	.article-content {
		display: flex;
		gap: var(--space-4);
		align-items: flex-start;
	}

	.article-image {
		flex-shrink: 0;
		width: 120px;
		height: 90px;
		position: relative;
		border-radius: var(--radius-md);
		overflow: hidden;
	}

	.image-link {
		display: block;
		width: 100%;
		height: 100%;
		position: relative;
		text-decoration: none;
	}

	.article-thumbnail {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform var(--transition-normal);
	}

	.image-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(45deg, rgba(37, 99, 235, 0.8), rgba(245, 158, 11, 0.8));
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transition: opacity var(--transition-normal);
	}

	.image-overlay i {
		color: var(--white);
		font-size: var(--text-lg);
		transform: translateX(-5px);
		transition: transform var(--transition-normal);
	}

	.article-card-sl:hover .article-thumbnail {
		transform: scale(1.05);
	}

	.article-card-sl:hover .image-overlay {
		opacity: 1;
	}

	.article-card-sl:hover .image-overlay i {
		transform: translateX(0);
	}

	.article-main {
		flex: 1;
		min-width: 0;
	}

	.article-category {
		margin-bottom: var(--space-2);
	}

	.article-title {
		margin-bottom: var(--space-2);
	}

	.title-link {
		text-decoration: none;
		color: inherit;
		transition: color var(--transition-fast);
	}

	.title-link:hover {
		color: var(--primary-color);
	}

	.title-text {
		font-size: var(--text-sm);
		font-weight: var(--font-semibold);
		line-height: var(--leading-tight);
		color: var(--gray-900);
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.article-abstract {
		margin-bottom: var(--space-3);
	}

	.abstract-text {
		color: var(--gray-600);
		font-size: var(--text-xs);
		line-height: var(--leading-relaxed);
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.article-meta {
		margin-bottom: var(--space-2);
	}

	.meta-info {
		display: flex;
		gap: var(--space-3);
		flex-wrap: wrap;
	}

	.meta-item {
		color: var(--gray-500);
		font-size: var(--text-xs);
		display: flex;
		align-items: center;
	}

	.article-tags {
		display: flex;
		flex-wrap: wrap;
		gap: var(--space-1);
	}

	/* Responsive Design */
	@media (max-width: 480px) {
		.article-content {
			flex-direction: column;
			gap: var(--space-3);
		}

		.article-image {
			width: 100%;
			height: 120px;
			order: -1;
		}

		.title-text {
			font-size: var(--text-xs);
		}

		.abstract-text {
			font-size: var(--text-xs);
		}

		.meta-item {
			font-size: var(--text-xs);
		}
	}
</style>
