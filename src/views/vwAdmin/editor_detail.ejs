<div class="container mt-4">
    <h3 class="mb-4">Editor Details</h3>
    <form action="/admin/editors/<%= editor.user_id %>/submit" method="post">
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Full Name:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" value="<%= editor.full_name %>" readonly>
        </div>
      </div>
  
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Role:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" value="<%= editor.user_role %>" readonly>
        </div>
      </div>
  
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">DoB:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" value="<%= editor.dob %>" readonly>
        </div>
      </div>
  
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Is Active:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" value="<%= editor.is_active === 1 ? 'Yes' : 'No' %>" readonly>
        </div>
      </div>
  
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Email:</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" value="<%= editor.email %>" readonly>
        </div>
      </div>
  
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Category Managing:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" value="<%= editor.managedCategory %>" readonly>
        </div>
      </div>
  
      <h4 class="mt-4">Articles Details</h4>
      <div class="tab-pane fade show active" id="published" role="tabpanel" aria-labelledby="published-tab">
        <table class="table table-striped table-bordered align-middle">
          <thead>
            <tr>
              <th style="width: 15%">Ảnh đại diện</th>
              <th style="width: 30%">Tiêu đề</th>
              <th style="width: 15%">Chuyên mục</th>
              <th style="width: 15%">Nhãn dán</th>
              <th style="width: 10%">Ngày đăng</th>
              <th style="width: 20%">Người duyệt</th>
            </tr>
          </thead>
          <tbody>
            <% if (articles.length > 0) { %>
              <% articles.forEach(article => { %>
                <tr>
                  <td>
                    <% if (article.thumbnail) { %>
                      <img src="/img/<%= article.thumbnail %>" alt="Thumbnail" class="img-fluid rounded" style="width: 100px; height: auto" />
                    <% } else { %>
                      <img src="/img/default-thumbnail.png" alt="Default Thumbnail" class="img-fluid rounded" style="width: 100px; height: auto" />
                    <% } %>
                  </td>
                  <td>
                    <a href="#" class="text-decoration-none text-primary" title="<%= article.title %>"> <%= article.title %> </a>
                  </td>
                  <td><%= article.category_name || 'N/A' %></td>
                  <td><%= article.tags || 'Không có nhãn dán' %></td>
                  <td><%= article.published_date ? new Date(article.published_date).toISOString().split('T')[0] : 'Chưa có' %></td>
                  <td><%= article.editor_name || '--' %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center">Không có bài viết.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
  
      <div class="mt-4 d-flex justify-content-between">
        <a href="/admin/editor" class="btn btn-secondary">Back</a>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>