<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reader Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid py-4">
        <div class="mb-4">
            <a href="/admin/readers" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Readers
            </a>
        </div>

        <div class="row">
            <!-- User Details Card -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title mb-0">Reader Information</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="fw-bold">User ID:</label>
                            <p><%= user.user_id %></p>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Username:</label>
                            <p><%= user.username %></p>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Email:</label>
                            <p><%= user.email %></p>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Full Name:</label>
                            <p><%= user.full_name %></p>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Premium Status:</label>
                            <p>
                                <% if (user.is_premium) { %>
                                    <span class="badge bg-warning">Premium</span>
                                    <br>
                                    <small class="text-muted">
                                        Expires: <%= new Date(user.subscription_expired_date).toLocaleDateString() %>
                                    </small>
                                <% } else { %>
                                    <span class="badge bg-secondary">Standard</span>
                                <% } %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Premium Registration Card -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title mb-0">Premium Registration</h3>
                    </div>
                    <div class="card-body">
                        <form action="/admin/readers/<%= user.user_id %>/register-premium" method="POST">
                            <div class="mb-3">
                                <label for="subscriptionExpiredDate" class="form-label">
                                    Subscription Expiry Date
                                </label>
                                <input type="date" 
                                       class="form-control" 
                                       id="subscriptionExpiredDate" 
                                       name="subscriptionExpiredDate"
                                       min="<%= new Date().toISOString().split('T')[0] %>"
                                       required>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-star-fill"></i> 
                                Register Premium
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>