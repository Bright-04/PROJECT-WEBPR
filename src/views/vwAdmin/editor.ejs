<h1 class="text-center">Editors</h1>
<div class="container my-4">
	<!-- Tab Content -->
	<div class="tab-content mt-3">
		<!-- Editors Tab Content -->
		<div class="tab-pane fade show active" id="editors" role="tabpanel" aria-labelledby="editors-tab">
			<table class="table table-striped table-bordered align-middle">
				<thead>
					<tr>
						<th style="width: 10%">ID</th>
						<th style="width: 20%">Tên đầy đủ</th>
						<th style="width: 15%">Ngày sinh</th>
						<th style="width: 25%">Email</th>
						<th style="width: 20%">Chuyên mục quản lý</th>
						<th style="width: 10%">Chi tiết</th>
					</tr>
				</thead>
				<tbody>
					<% if (editors && editors.length > 0) { %> <% editors.forEach(editor => { %>
					<tr>
						<td><%= editor.user_id %></td>
						<td><%= editor.full_name %></td>
						<td><%= new Date(editor.dob).toISOString().split('T')[0] %></td>
						<td><%= editor.email %></td>
						<td><%= editor.managed_category_name || 'Chưa có' %></td>
						<td class="text-center">
							<a href="/admin/editor/detail?id=<%= editor.user_id %>" class="btn btn-link p-0" title="View Details">
								<i class="bi bi-pencil-square"></i>
							</a>
						</td>
					</tr>
					<% }) %> <% } else { %>
					<tr>
						<td colspan="6" class="text-center">Không có editor nào.</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<!-- Bootstrap Script -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
