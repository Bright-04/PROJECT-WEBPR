<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            padding: 2rem;
            background-color: #f8f9fa;
        }

        .container-fluid {
            max-width: 1400px;
        }

        .section-title {
            margin-bottom: 2rem;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .table img {
            max-width: 50px;
            max-height: 50px;
        }

        .table thead {
            background-color: #0d6efd;
            color: white;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .date-input {
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 0.375rem 0.75rem;
        }

        .date-input:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            outline: none;
        }

        .table-fixed-height {
            max-height: 600px;
            overflow-y: auto;
        }

        .table-fixed-header {
            position: relative;
        }

        .table-fixed-header thead {
            position: sticky;
            top: 0;
            z-index: 1;
        }

        .nav-card {
            position: sticky;
            top: 2rem;
        }

        .nav-link {
            padding: 1rem;
            margin-bottom: 0.5rem;
            border-radius: 0.375rem;
            transition: all 0.2s;
        }

        .nav-link:hover {
            background-color: #e9ecef;
        }

        .nav-link.active {
            background-color: #0d6efd;
            color: white;
        }

        .nav-icon {
            margin-right: 0.5rem;
            width: 20px;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Tables Section -->
            <div class="col-lg-9">
                <!-- Approved Articles Table -->
                <h2 class="section-title">Approved Articles</h2>
                <div class="table-fixed-height">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-fixed-header">
                            <!-- Existing table header and content -->
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Thumbnail</th>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th>Publish Date</th>
                                    <th>Premium Article</th>
                                    <th>Writer Name</th>
                                    <th>Editor Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% approvedArticles.forEach(article => { %>
                                <tr>
                                    <td><%= article.article_id %></td>
                                    <td><img src="<%= article.thumbnail %>" class="img-thumbnail" alt="Thumbnail" /></td>
                                    <td><%= article.title %></td>
                                    <td><%= article.category_name %></td>
                                    <td><span class="badge bg-success"><%= article.status %></span></td>
                                    <td><%= new Date(article.published_date).toDateString() %></td>
                                    <td><span class="badge bg-<%= article.is_premium ? 'warning' : 'secondary' %>">
                                        <%= article.is_premium ? 'Yes' : 'No' %>
                                    </span></td>
                                    <td><%= article.writer_name %></td>
                                    <td><%= article.editor_name %></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pending Articles Table -->
                <h2 class="section-title">Pending Articles</h2>
                <div class="table-fixed-height">
                    <!-- Existing pending articles table content -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-fixed-header">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Thumbnail</th>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th>Publish Date</th>
                                    <th>Premium Article</th>
                                    <th>Writer Name</th>
                                    <th>Editor Name</th>
                                    <th>Admin Choice</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% pendingArticles.forEach(article => { %>
                                <tr>
                                    <td><%= article.article_id %></td>
                                    <td><img src="<%= article.thumbnail %>" class="img-thumbnail" alt="Thumbnail" /></td>
                                    <td><%= article.title %></td>
                                    <td><%= article.category_id %></td>
                                    <td><span class="badge bg-warning text-dark"><%= article.status %></span></td>
                                    <td><input type="date" class="form-control form-control-sm" /></td>
                                    <td><span class="badge bg-<%= article.is_premium ? 'warning' : 'secondary' %>">
                                        <%= article.is_premium ? 'Yes' : 'No' %>
                                    </span></td>
                                    <td><%= article.writer_name %></td>
                                    <td><%= article.editor_name %></td>
                                    <td>
                                        <button class="btn btn-primary btn-sm">Publish Now</button>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Navigation Card -->
            <div class="col-lg-3">
                <div class="card nav-card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Navigation</h5>
                    </div>
                    <div class="card-body">
                        <div class="nav flex-column">
                            <a href="/admin" class="nav-link active">
                                <i class="nav-icon bi bi-house-fill"></i>
                                Dashboard
                            </a>
                            <a href="/admin/tags" class="nav-link">
                                <i class="nav-icon bi bi-tags"></i>
                                Tags
                            </a>
                            <a href="/admin/categories" class="nav-link">
                                <i class="nav-icon bi bi-grid"></i>
                                Categories
                            </a>
                            <a href="/admin/writers" class="nav-link">
                                <i class="nav-icon bi bi-pencil"></i>
                                Writers
                            </a>
                            <a href="/admin/editor" class="nav-link">
                                <i class="nav-icon bi bi-person-badge"></i>
                                Editors
                            </a>
                            <a href="/admin/reader" class="nav-link">
                                <i class="nav-icon bi bi-people"></i>
                                Readers
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>