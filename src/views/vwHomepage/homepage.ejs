<!-- Hero Section with Featured Articles -->
<section class="hero-section featured-articles">
	<div class="container">
		<div class="section-header">
			<h2 class="text-gradient">Tin Tức Nổi Bật</h2>
			<p class="text-gray-600">Khám phá những câu chuyện quan trọng nhất trong ngày</p>
		</div>

		<div id="FeaturedArticles" class="carousel slide" data-bs-ride="carousel">
			<div class="carousel-indicators">
				<% for (let i = 0; i < newestArticles.slice(0, 4).length; i++) { %>
				<button
					type="button"
					data-bs-target="#FeaturedArticles"
					data-bs-slide-to="<%= i %>"
					class="<%= i === 0 ? 'active' : '' %>"
					aria-current="<%= i === 0 ? 'true' : 'false' %>"
					aria-label="Slide <%= i + 1 %>"
				></button>
				<% } %>
			</div>

			<div class="carousel-inner">
				<% newestArticles.slice(0, 4).forEach((article, index) => { %>
				<div class="carousel-item <%= index === 0 ? 'active' : '' %>">
					<a href="/article/<%= article.article_id %>" class="d-block">
						<img src="/img/<%= article.thumbnail %>" class="d-block w-100" alt="<%= article.title %>" />
						<div class="carousel-caption">
							<div class="category-badge mb-3"><%= article.category_name %></div>
							<h3><%= article.title %></h3>
							<p>
								<i class="bi bi-calendar3 me-2"></i>
								<%= new Date(article.published_date).toLocaleDateString('vi-VN') %>
								<span class="mx-2">|</span>
								<i class="bi bi-eye me-2"></i>
								<%= article.views || 0 %> lượt xem
							</p>
						</div>
					</a>
				</div>
				<% }) %>
			</div>

			<button class="carousel-control-prev" type="button" data-bs-target="#FeaturedArticles" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#FeaturedArticles" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</div>
</section>

<!-- Category Highlights Grid -->
<section class="category-highlights-section">
	<div class="container">
		<div class="section-header text-center mb-5">
			<h2>Khám Phá Theo Chủ Đề</h2>
			<p class="text-gray-600">Chọn chủ đề bạn quan tâm để khám phá tin tức</p>
		</div>

		<div class="category-grid">
			<div class="row g-4">
				<% const parentCategories = categories.filter(cat => cat.belong_to === null); %> <% parentCategories.slice(0, 6).forEach((category, index) => { %>
				<div class="col-lg-4 col-md-6">
					<div class="category-card hover-lift animate-fade-in" style="animation-delay: <%= index * 0.1 %>s">
						<a href="/homepage/cate?id=<%= category.category_id %>" class="category-card-link">
							<div class="category-card-icon">
								<i class="bi bi-<%= ['newspaper', 'graph-up', 'cpu', 'trophy', 'music-note', 'heart-pulse'][index % 6] %>"></i>
							</div>
							<div class="category-card-content">
								<h4 class="category-card-title"><%= category.category_name %></h4>
								<p class="category-card-desc">Khám phá tin tức <%= category.category_name.toLowerCase() %> mới nhất</p>
								<div class="category-card-meta">
									<span class="article-count">
										<i class="bi bi-file-text me-1"></i>
										<%= Math.floor(Math.random() * 50) + 10 %> bài viết
									</span>
								</div>
							</div>
						</a>
					</div>
				</div>
				<% }); %>
			</div>
		</div>
	</div>
</section>

<!-- Latest Articles & Categories Section -->
<section class="content-section">
	<div class="container">
		<div class="row g-5">
			<!-- Latest Articles -->
			<div class="col-lg-8">
				<div class="latest-articles">
					<div class="section-header">
						<h2>Bài Viết Mới Nhất</h2>
						<p class="text-gray-600">Cập nhật tin tức mới nhất trong ngày</p>
					</div>

					<div class="articles-grid animate-stagger">
						<% newestArticles.forEach((article, index) => { %>
						<div class="article-item"><%- include("../partials/article_sr", {article: article, width: "100%"}) %></div>
						<% }) %>
					</div>

					<div class="text-center mt-5">
						<a href="/homepage/list" class="btn btn-primary btn-lg">
							<i class="bi bi-arrow-right me-2"></i>
							Xem tất cả bài viết
						</a>
					</div>
				</div>
			</div>

			<!-- Sidebar -->
			<div class="col-lg-4">
				<!-- Category Highlights -->
				<div class="sidebar-widget mb-5">
					<div class="widget-header">
						<h4 class="widget-title">
							<i class="bi bi-grid-3x3-gap me-2 text-primary"></i>
							Danh Mục Nổi Bật
						</h4>
					</div>

					<div class="widget-content">
						<% categoryArticles.forEach((article) => { %>
						<div class="category-highlight mb-4">
							<div class="category-header">
								<a href="/category/<%= article.category_id %>" class="category-link">
									<h5 class="category-name">
										<i class="bi bi-tag me-2"></i>
										<%= article.category_name.toUpperCase() %>
									</h5>
								</a>
							</div>
							<div class="category-article"><%- include("../partials/article_sl", {article: article, width: "100%", show_tags: true}) %></div>
						</div>
						<% }) %>
					</div>
				</div>

				<!-- Trending Tags -->
				<div class="sidebar-widget">
					<div class="widget-header">
						<h4 class="widget-title">
							<i class="bi bi-fire me-2 text-warning"></i>
							Thẻ Nổi Bật
						</h4>
					</div>

					<div class="widget-content">
						<div class="tags-cloud">
							<% const allTags = []; %> <% newestArticles.forEach(article => { %> <% if (article.tags) { %> <% article.tags.forEach(tag => { %> <% if (!allTags.find(t => t.tag_id ===
							tag.tag_id)) { %> <% allTags.push(tag); %> <% } %> <% }); %> <% } %> <% }); %> <% allTags.slice(0, 15).forEach(tag => { %>
							<a href="/homepage/tag?id=<%= tag.tag_id %>" class="tag-badge"> #<%= tag.tag_name %> </a>
							<% }); %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- Most Viewed Articles Section -->
<section class="most-viewed-section">
	<div class="container">
		<div class="most-viewed">
			<div class="section-header">
				<h2>Bài Viết Được Xem Nhiều Nhất</h2>
				<p class="text-gray-600">Những bài viết thu hút sự quan tâm của độc giả</p>
			</div>

			<div class="articles-grid">
				<div class="row g-4">
					<% mostViewedArticles.forEach((article, index) => { %>
					<div class="col-lg-2 col-md-3 col-sm-4 col-6">
						<div class="article-card hover-lift animate-fade-in" style="animation-delay: <%= index * 0.1 %>s">
							<a href="/article/<%= article.article_id %>" class="text-decoration-none">
								<div class="card-img-wrapper">
									<img src="/img/<%= article.thumbnail %>" class="card-img-top" alt="<%= article.title %>" />
									<div class="card-overlay">
										<div class="overlay-content">
											<i class="bi bi-eye-fill"></i>
											<span><%= article.views || 0 %></span>
										</div>
									</div>
								</div>
								<div class="card-body">
									<% if (typeof show_cat !== 'undefined' && show_cat) { %>
									<div class="category-badge mb-2"><%= article.category_name %></div>
									<% } %>
									<h6 class="card-title text-gray-900"><%= article.title.length > 60 ? article.title.substring(0, 60) + '...' : article.title %></h6>
									<div class="card-meta">
										<small class="text-gray-500">
											<i class="bi bi-calendar3 me-1"></i>
											<%= new Date(article.published_date).toLocaleDateString('vi-VN') %>
										</small>
									</div>
									<% if (typeof show_tags !== 'undefined' && show_tags && article.tags) { %>
									<div class="card-tags mt-2">
										<% article.tags.slice(0, 2).forEach(tag => { %>
										<span class="tag-badge"> <%= tag.tag_name %> </span>
										<% }); %>
									</div>
									<% } %>
								</div>
							</a>
						</div>
					</div>
					<% }); %>
				</div>
			</div>
		</div>
	</div>
</section>

