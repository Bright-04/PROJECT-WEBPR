<div class="container p-0">
	<!-- Row 1: Feature Articles - Slideshow Animation -->
	<div id="FeaturedArticles" class="carousel slide w-100" data-ride="carousel">
		<ol class="carousel-indicators">
			<% for (let i = 0; i < 4; i++) { %>
			<li data-target="#FeaturedArticles" data-slide-to="<%= i %>" class="<%= i === 0 ? 'active' : '' %>"></li>
			<% } %>
		</ol>
		<div class="carousel-inner" role="listbox">
			<% for (let i = 0; i < 4; i++) { %>
			<div class="carousel-item <%= i === 0 ? 'active' : '' %>">
				<a href="#">
					<img
						src="https://vinbigdata.com/wp-content/uploads/2024/03/robot-working-with-digital-display-internet-connection-controlled-by-ai-robot-humanoid-machine-learning-process-analyze-data-connectivity-cyber-security-illustration-robot-3d-1536x768.jpg"
						class="d-block w-100"
						alt="Slide <%= i + 1 %>"
					/>
					<div class="carousel-caption d-none d-md-block">
						<h3>Siêu trí tuệ nhân tạo AGI "đang dần hiện diện"</h3>
						<p>2 giờ trước</p>
					</div>
				</a>
			</div>
			<% } %>
		</div>

		<!-- Các nút điều khiển carousel -->
		<a class="carousel-control-prev" href="#FeaturedArticles" role="button" data-slide="prev">
			<span class="carousel-control-prev-icon"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#FeaturedArticles" role="button" data-slide="next">
			<span class="carousel-control-next-icon"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>

	<!-- Row 2: Latest Articles + Top Categories -->
	<div class="container pl-0 py-4">
		<div class="row border-bottom">
			<!-- Lastest Articles -->
			<div class="col-md-6 border-right">
				<div class="text-center mb-4">
					<h3>BÀI VIẾT MỚI NHẤT</h3>
				</div>
				<!-- articles.forEach(article => { -->
				<% for (let i = 0; i < 10; i++) { %>
				<div class="d-flex align-items-center border-bottom p-3 mb-3">
					<div class="flex-grow-1">
						<!-- <a href="article.link" class="text-reset"> -->
						<a href="#" class="text-reset">
							<!-- <h5 class="mb-2">article.title</h5> -->
							<h5 class="mb-2">Siêu trí tuệ nhân tạo AGI "đang dần hiện diện"</h5>
						</a>
						<!-- <div class="text-muted small">article.time | <a href="#" class="text-decoration-none text-reset">article.category</a></div> -->
						<div class="text-muted small">2 giờ trước | <a href="#" class="text-decoration-none text-reset">Số hóa</a></div>
					</div>
					<!-- <img src="article.image" alt="Thumbnail" class="img-fluid" style="width: 200px; height: 150px; object-fit: cover" /> -->
					<img
						src="https://vinbigdata.com/wp-content/uploads/2024/03/robot-working-with-digital-display-internet-connection-controlled-by-ai-robot-humanoid-machine-learning-process-analyze-data-connectivity-cyber-security-illustration-robot-3d-1536x768.jpg"
						alt="Thumbnail"
						class="img-fluid"
						style="width: 200px; height: 150px; object-fit: cover"
					/>
				</div>
				<% } %>
			</div>

			<!-- Top Categories -->
			<div class="col-md-6">
				<% for (let i = 0; i < 8; i++) { %>
				<div class="card my-2">
					<div class="card-header"><a href="#" class="h5 text-decoration-none text-reset">KINH DOANH</a> Nông sản Hải sản Chứng khoán</div>
					<div class="card-body">
						<div class="d-flex align-items-center">
							<!-- <img src="article.image" alt="Thumbnail" class="img-fluid" style="width: 200px; height: 150px; object-fit: cover" /> -->
							<img
								src="https://vinbigdata.com/wp-content/uploads/2024/03/robot-working-with-digital-display-internet-connection-controlled-by-ai-robot-humanoid-machine-learning-process-analyze-data-connectivity-cyber-security-illustration-robot-3d-1536x768.jpg"
								alt="Thumbnail"
								class="img-fluid"
								style="width: 200px; height: 150px; object-fit: cover"
							/>
							<div class="flex-grow-1 pl-4">
								<!-- <a href="article.link" class="text-reset"> -->
								<a href="#" class="text-reset">
									<!-- <h5 class="mb-2">article.title</h5> -->
