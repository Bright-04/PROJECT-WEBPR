<style>
  /* Custom Styling for the Tables */
  .tab-content table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
  }
  .tab-content th, .tab-content td {
      padding: 12px;
      text-align: center;
      border: 1px solid #ddd;
  }
  .tab-content th {
      background-color: #f4f4f4;
      font-weight: bold;
  }
  .tab-content img {
      border-radius: 8px;
  }
  .tab-content tbody tr:hover {
      background-color: #f9f9f9;
  }
  /* Active Tab Styling */
  .tabs a {
      text-decoration: none;
      color: #007bff;
      padding: 8px 16px;
      display: inline-block;
      border-bottom: 2px solid transparent;
  }
  .tabs a.active {
      font-weight: bold;
      border-bottom: 2px solid #007bff;
  }
  .tabs ul {
      list-style: none;
      display: flex;
      gap: 10px;
      padding: 0;
  }
  .tabs {
      margin-bottom: 20px;
  }
</style>
<!-- Tabs Navigation -->
<div class="tabs">
  <ul>
      <li><a href="#pending" class="active">Chờ duyệt</a></li>
      <li><a href="#published">Đã đăng</a></li>
  </ul>
</div>

<!-- Tab Content: Chờ duyệt -->
<div id="pending" class="tab-content active">
  <table>
      <thead>
          <tr>
              <th>Ảnh đại diện</th>
              <th>Tiêu đề</th>
              <th>Chuyên mục</th>
              <th>Nhãn dán</th>
              <th>Ngày đăng</th>
              <th>Người duyệt</th>
          </tr>
      </thead>
      <tbody>
        <% if (pendingArticles.length > 0) { %>
            <% pendingArticles.forEach(article => { %>
                <tr>
                    <td>
                        <% if (article.thumbnail) { %>
                            <img src="/img/<%= article.thumbnail %>" alt="Thumbnail" width="50" />
                        <% } else { %>
                            <img src="/img/default-thumbnail.png" alt="Default Thumbnail" width="50" />
                        <% } %>
                    </td>
                    <td>
                        <a href="#" title="<%= article.title %>"><%= article.title %></a>
                    </td>
                    <td><%= article.category_name || 'N/A' %></td>
                    <td><%= article.tags || 'Không có nhãn dán' %></td>
                    <td><%= article.published_date || 'Chưa có' %></td>
                    <td>--</td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="6">Không có bài viết chờ duyệt.</td>
            </tr>
        <% } %>
    </tbody>    
  </table>
</div>

<!-- Tab Content: Đã đăng -->
<div id="published" class="tab-content">
  <table>
      <thead>
          <tr>
              <th>Ảnh đại diện</th>
              <th>Tiêu đề</th>
              <th>Chuyên mục</th>
              <th>Nhãn dán</th>
              <th>Ngày đăng</th>
              <th>Người duyệt</th>
          </tr>
      </thead>
      <tbody>
        <% if (publishedArticles.length > 0) { %>
            <% publishedArticles.forEach(article => { %>
                <tr>
                    <td>
                        <% if (article.thumbnail) { %>
                            <img src="/img/<%= article.thumbnail %>" alt="Thumbnail" width="50" />
                        <% } else { %>
                            <img src="/img/default-thumbnail.png" alt="Default Thumbnail" width="50" />
                        <% } %>
                    </td>
                    <td>
                        <a href="#" title="<%= article.title %>"><%= article.title %></a>
                    </td>
                    <td><%= article.category_name || 'N/A' %></td>
                    <td><%= article.tags || 'Không có nhãn dán' %></td>
                    <td><%= article.published_date || 'Chưa có' %></td>
                    <td><%= article.editor_name || '--' %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="6">Không có bài viết đã đăng.</td>
            </tr>
        <% } %>
    </tbody>    
  </table>
</div>
<!-- Tab Switching Script -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
      const tabs = document.querySelectorAll('.tabs a');
      const contents = document.querySelectorAll('.tab-content');

      tabs.forEach(tab => {
          tab.addEventListener('click', (e) => {
              e.preventDefault();

              // Remove active class
              tabs.forEach(t => t.classList.remove('active'));
              contents.forEach(c => c.classList.remove('active'));

              // Add active class to clicked tab and corresponding content
              tab.classList.add('active');
              const target = document.querySelector(tab.getAttribute('href'));
              target.classList.add('active');
          });
      });
  });
</script>
