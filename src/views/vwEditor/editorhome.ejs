


<div class="container my-4">
    <!-- Tabs Navigation -->
    <ul class="nav nav-tabs" id="editorTabs" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="true">
                Chờ duyệt
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="published-tab" data-bs-toggle="tab" data-bs-target="#published" type="button" role="tab" aria-controls="published" aria-selected="false">
                Đã đăng
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content mt-3">
        <!-- Tab Content: Chờ duyệt -->
        <div class="tab-pane fade show active" id="pending" role="tabpanel" aria-labelledby="pending-tab">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Ảnh đại diện</th>
                        <th>Tiêu đề</th>
                        <th>Chuyên mục</th>
                        <th>Nhãn dán</th>
                        <th>Ngày đăng</th>
                        <th>Người duyệt</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (pendingArticles.length > 0) { %>
                        <% pendingArticles.forEach(article => { %>
                            <tr>
                                <td>
                                    <% if (article.thumbnail) { %>
                                        <img src="/img/<%= article.thumbnail %>" alt="Thumbnail" class="img-thumbnail" style="width: 50px; height: auto;">
                                    <% } else { %>
                                        <img src="/img/default-thumbnail.png" alt="Default Thumbnail" class="img-thumbnail" style="width: 50px; height: auto;">
                                    <% } %>
                                </td>
                                <td>
                                    <a href="#" title="<%= article.title %>"><%= article.title %></a>
                                </td>
                                <td><%= article.category_name || 'N/A' %></td>
                                <td><%= article.tags || 'Không có nhãn dán' %></td>
                                <td><%= article.published_date ? new Date(article.published_date).toLocaleDateString("vi-VN") : "Chưa có" %></td>

                                <td>--</td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center text-muted">Không có bài viết chờ duyệt.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Tab Content: Đã đăng -->
        <div class="tab-pane fade" id="published" role="tabpanel" aria-labelledby="published-tab">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Ảnh đại diện</th>
                        <th>Tiêu đề</th>
                        <th>Chuyên mục</th>
                        <th>Nhãn dán</th>
                        <th>Ngày đăng</th>
                        <th>Người duyệt</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (publishedArticles.length > 0) { %>
                        <% publishedArticles.forEach(article => { %>
                            <tr>
                                <td>
                                    <% if (article.thumbnail) { %>
                                        <img src="/img/<%= article.thumbnail %>" alt="Thumbnail" class="img-thumbnail" style="width: 50px; height: auto;">
                                    <% } else { %>
                                        <img src="/img/default-thumbnail.png" alt="Default Thumbnail" class="img-thumbnail" style="width: 50px; height: auto;">
                                    <% } %>
                                </td>
                                <td>
                                    <a href="#" title="<%= article.title %>"><%= article.title %></a>
                                </td>
                                <td><%= article.category_name || 'N/A' %></td>
                                <td><%= article.tags || 'Không có nhãn dán' %></td>
                                <td><%= article.published_date ? new Date(article.published_date).toLocaleDateString("vi-VN") : "Chưa có" %></td>
                                <td><%= article.editor_name || '--' %></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center text-muted">Không có bài viết đã đăng.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
